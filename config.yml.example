# Rotary Phone VoIP Controller - Example Configuration
# Copy this file to config.yml and customize for your setup

# SIP/VoIP Settings
sip:
  server: "seattle.voip.ms"       # Your VoIP provider's SIP server
  username: "123456_myphone"      # SIP account username
  password: "your-sip-password"   # SIP password (not web password!)
  port: 5060                      # SIP port (default: 5060)
  stun_server: "stun.voip.ms"     # STUN server for NAT traversal

# Speed Dial Mappings
# Map short codes to full phone numbers
# Example:
#   "1": "+12065551234"   # Mom's cell
#   "2": "+12065555678"   # Dad's work
speed_dial: {}

# Allowlist - Numbers that can be dialed directly
# Options:
#   [] - Block all direct dialing (speed dial only)
#   ["*"] - Allow any number to be dialed
#   ["+1234567890", "911"] - Allow specific numbers
allowlist: ["*"]

# Timing Constants (in seconds)
timing:
  inter_digit_timeout: 2.0      # Time to wait for next digit before dialing
  ring_duration: 2.0            # Ring on time
  ring_pause: 4.0               # Ring off time
  pulse_timeout: 0.3            # Time after last pulse before digit is complete
  hook_debounce_time: 0.01      # Debounce time for hook switch (prevents bouncing)
  sip_registration_timeout: 10.0  # How long to wait for SIP registration
  call_attempt_timeout: 60.0    # How long to wait for outbound call to connect

# Audio Settings
audio:
  ring_sound: "sounds/ring.wav"           # Path to ring sound file
  dial_tone: "sounds/dialtone.wav"        # Path to dial tone
  busy_tone: "sounds/busy.wav"            # Path to busy signal
  error_tone: "sounds/error.wav"          # Path to error tone

# Database Settings
database:
  path: "data/calls.db"              # SQLite database path for call logs
  cleanup_days: 365             # Auto-delete call logs older than this (0 = never)

# Logging
logging:
  level: "INFO"                 # DEBUG, INFO, WARNING, ERROR
  file: ""                      # Log file path (empty = stdout only)
  max_bytes: 10485760           # 10MB max log file size
  backup_count: 3               # Number of backup log files

# Web Admin Interface
web:
  enabled: false                # Enable web admin interface
  host: "0.0.0.0"              # Host to bind (0.0.0.0 = all interfaces)
  port: 7474                    # Port for web interface
